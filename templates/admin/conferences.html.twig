{% extends 'base.html.twig' %}

{% block title %}Conference Guestbook{% endblock %}

{% block body %}
    <h2>Conferences</h2>
    {% embed "admin/update_conference_form.html.twig" %}{% endembed %}

    <table class="table table-hover">
        <thead>
        <tr>
            <th>City</th>
            <th>Year</th>
            <th>International</th>
            <th>
                <a class="" href="{{ path('admin_create_conference') }}">Create Conference</a>
            </th>
        </tr>
        </thead>
        {% for conference in conferences %}
            <tr id="{{ conference.id }}">
                <td>{{ conference.city }}</td>
                <td>{{ conference.year }}</td>
                <td>{% if conference.international %}Yes{% else %}No{% endif %}</td>
                <td>
                    <a class="" href="{{ path('conference', { slug: conference.slug }) }}">View</a>
                    <a class="text-primary table-hover test" style="cursor: pointer" data-toggle="modal" data-target="#updateConference" data-id="{{ conference.id }}">Update</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

{% block stylesheets %}
    <style>
        table, th, td {
            border: 1px solid black;
        }
    </style>
{%  endblock %}

{% block javascripts %}
    <script src="{{ asset('js/update_conference.js') }}" ></script>
{% endblock %}
