{% extends 'base.html.twig' %}

{% block title %}Conference Guestbook{% endblock %}

{% block body %}
    <h2>Conferences</h2>

    <table>
        {% for conference in conferences %}
            <tr>
                <td>{{ conference.city }}</td>
                <td>{{ conference.year }}</td>
                <td>{% if conference.international %}International{% else %}Local{% endif %}</td>
                <td><a href="{{ path('conference', { id: conference.id }) }}">View</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

{% block stylesheets %}
    <style>
        table, th, td {
            border: 1px solid black;
        }
    </style>
{%  endblock %}
